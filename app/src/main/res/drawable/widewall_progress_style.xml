<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dip" />
            <gradient
                android:startColor="@color/ourWhite"
                android:centerColor="@color/ourWhite"
                android:centerY="0.5"
                android:endColor="@color/ourWhite"
                android:angle="270"
                android:centerX="0.5"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="@color/redA700"
                    android:centerColor="@color/redA700"
                    android:centerY="0.75"
                    android:endColor="@color/redA700"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="@color/redA700"
                    android:centerColor="@color/redA700"
                    android:centerY="0.75"
                    android:endColor="@color/redA700"
                    android:angle="270"/>
            </shape>
        </clip>
    </item>

</layer-list>

