<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_home_stuff.Planet"
    android:orientation="vertical"
    android:background="@drawable/background_custom"
    android:weightSum="2.5"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/planet_earth"
            android:id="@+id/planetIcon"
            tools:ignore="ContentDescription" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/location_home"
            android:id="@+id/joinYourCountry"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/locationFlag"
            tools:ignore="ContentDescription" />

    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/islandIcon"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

</LinearLayout>